{
  "[json]": {"editor.defaultFormatter": "j-brooke.fracturedjsonvsc"},
  "[jsonc]": {"editor.defaultFormatter": "j-brooke.fracturedjsonvsc"},
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
    "editor.formatOnSave": true
  },
  "astGrep.serverPath": "/home/ton/.cargo/bin/ast-grep",
  "diffEditor.ignoreTrimWhitespace": false,
  "dotnetAcquisitionExtension.existingDotnetPath": [
    {"extensionId": "ms-dotnettools.csharp", "path": "/usr/bin/dotnet"}
  ],
  "editor.bracketPairColorization.enabled": true,
  "editor.fontFamily": "'Iosevka Nerd Font Mono', 'FiraCode Nerd Font Mono', 'Droid Sans Mono', 'monospace', monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 18,
  "editor.guides.bracketPairs": true,
  "editor.minimap.renderCharacters": false,
  "editor.renderWhitespace": "boundary",
  "editor.stickyScroll.enabled": true,
  "editor.tabSize": 2,
  "errorLens.enabledDiagnosticLevels": ["error", "warning"],
  "files.associations": {"*.sql.rollback": "sql"},
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "firedbg.showWelcome": false,
  "fontshortcuts.defaultTerminalFontSize": 14,
  "git.experimental.mergeEditor": true,
  "glassit.alpha": 245,
  "javascript.format.semicolons": "insert",
  "languageToolLinter.diagnosticSeverity": "information",
  "languageToolLinter.languageTool.motherTongue": "pt-BR",
  "languageToolLinter.plainText.languageIds": ["plaintext", "typst"],
  "notebook.cellToolbarLocation": {
    "default"         : "right",
    "jupyter-notebook": "left"
  },
  "notebook.output.scrolling": true,
  "python.defaultInterpreterPath": "/opt/anaconda/bin/python",
  "python.formatting.provider": "black",
  "redhat.telemetry.enabled": false,
  // "rust-analyzer.checkOnSave.command": "clippy",
  "security.workspace.trust.untrustedFiles": "open",
  "shellcheck.customArgs": ["-x"],
  "terminal.external.linuxExec": "kitty",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.fontSize": 18,
  "terminal.integrated.inheritEnv": false,
  "terminal.integrated.localEchoExcludePrograms": [
    "vim"   , "vi"    , "nano"  , "micro" , "tmux"  , "zellij", "nvim"
  ],
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.stickyScroll.enabled": true,
  "typescript.format.semicolons": "insert",
  "typst-lsp.exportPdf": "never",
  "vim.easymotion": true,
  "volar.autoCompleteRefs": true,
  "volar.codeLens.scriptSetupTools": true,
  "window.commandCenter": true,
  "window.titleBarStyle": "custom",
  "window.zoomLevel": 0,
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.iconTheme": "catppuccin-mocha",
  "[yaml]": {"editor.defaultFormatter": "redhat.vscode-yaml"},
  "[properties]": {"editor.defaultFormatter": "foxundermoon.shell-format"},
  "editor.detectIndentation": false,
  "[typescript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "[vue]": {"editor.defaultFormatter": "Vue.volar"},
  "cSpell.userWords": ["pokemons"],
  "window.newWindowProfile": "Default"
}
